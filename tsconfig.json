{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~modules-core/*": ["./src/modules/core/*"],
      "~modules-auth/*": ["./src/modules/auth/*"],
      "~modules-dashboard/*": ["./src/modules/dashboard/*"],
      "~styles/*": ["./src/styles/*"],
      "~types/*": ["./src/types/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/middleware.js"],
  "exclude": ["node_modules"]
}
